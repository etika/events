<%= form_for @event do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :location %><br>
  <%= f.text_field :location %><br>
  <br>
    <%= f.label :event_date %>
    <%= f.date_field :event_date, class: "datepicker" %>
  <br>
   <%= f.label :fees %><br>
  <%= f.text_field :fees %><br>
  <%= f.label :event_category%>
  <%= f.collection_select :event_category_id, EventCategory.all, :id, :name, include_blank: true %></br>
  <%= f.submit %>
<% end %>
  <script type="text/javascript">
      $(document).ready(function(){
        $('.datepicker').datepicker({
          format: "yyyy/mm/dd",
          autoclose: true,
          todayBtn: "linked",
          todayHighlight': true
                  });
      });
    </script>s